<?xml version="1.0" encoding="utf-8"?>
<!-- Drawable for rounded corners
Code taken from - https://stackoverflow.com/questions/6054562/how-to-make-the-corners-of-a-button-round -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="17dip" />
            <stroke android:width="1dip" android:color="@color/grey" />
            <solid android:angle="-90" android:color="@color/grey"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/grey" />
            <solid android:color="@color/grey"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/grey" />
            <solid android:angle="-90" android:color="@color/grey"/>
        </shape>
    </item>
</selector>